<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xxxman.autotest.shell.MainActivity"
    tools:showIn="@layout/activity_main">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="#C8C8C8"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="5、送礼物"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/idEdit"
                            android:layout_width="match_parent"
                            android:minWidth="180dp"
                            android:layout_height="40dp"
                            android:hint="任务编号"
                            android:textSize="14sp"
                            android:digits="1234567890"
                            android:imeActionId="@+id/login"
                            android:inputType="text" />
                        <EditText
                            android:id="@+id/huajiaoEdit"
                            android:layout_width="match_parent"
                            android:minWidth="180dp"
                            android:layout_height="40dp"
                            android:hint="花椒号"
                            android:textSize="14sp"
                            android:digits="1234567890"
                            android:imeActionId="@+id/login"
                            android:inputType="text" />
                        <EditText
                            android:id="@+id/perDouEdit"
                            android:layout_width="match_parent"
                            android:minWidth="180dp"
                            android:layout_height="40dp"
                            android:hint="每个账号送豆数"
                            android:textSize="14sp"
                            android:digits="1234567890"
                            android:imeActionId="@+id/login"
                            android:inputType="text" />
                        <EditText
                            android:id="@+id/maxDouEdit"
                            android:layout_width="match_parent"
                            android:minWidth="180dp"
                            android:layout_height="40dp"
                            android:hint="总送豆数"
                            android:textSize="14sp"
                            android:digits="1234567890"
                            android:imeActionId="@+id/login"
                            android:inputType="text" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/runBtn5"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:onClick="songDou"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="开始/继续" />
                    <Button
                        android:id="@+id/runBtn6"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:onClick="getBefore"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="上次信息" />
                    <Button
                        android:id="@+id/runBtn7"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:onClick="setNull"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="清空信息" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/dou_view"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="0.84"
                    android:lineSpacingExtra="10dp"
                    android:text="" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="#C8C8C8"
                android:visibility="gone"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="1、分享阳光任务"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/border"
                android:padding="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/task_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.84"
                        android:lineSpacingExtra="10dp"
                        android:text="已完成0个，待处理1000个!" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/runBtn"
                        android:layout_width="80dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_height="match_parent"
                        android:onClick="runMyUiautomator"
                        android:background="@drawable/btn_selector"
                        android:text="开始" />
                    <!--android:background="#42c02e"-->
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:background="#C8C8C8"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="2、自动登录账号"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/border"
                android:padding="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/number_edit"
                        android:layout_width="match_parent"
                        android:minWidth="180dp"
                        android:layout_height="wrap_content"
                        android:hint="输入账户列编号"
                        android:textSize="14sp"
                        android:digits="1234567890"
                        android:imeActionId="@+id/login"
                        android:inputType="text" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/runBtn1"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:onClick="runLogin"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="开始" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="#C8C8C8"
                android:visibility="gone"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="3、自动抢红包"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/border"
                android:padding="10dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/hongbao_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.84"
                        android:lineSpacingExtra="10dp"
                        android:text="已完成0个，待处理1000个!" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/runBtn3"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:onClick="runHongbao"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="开始" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="#C8C8C8"
                android:visibility="gone"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="4、自动抢红包(指定账户)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/border"
                android:padding="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/number_edit1"
                        android:layout_width="match_parent"
                        android:minWidth="180dp"
                        android:layout_height="wrap_content"
                        android:hint="输入账户列编号"
                        android:textSize="14sp"
                        android:digits="1234567890"
                        android:imeActionId="@+id/login"
                        android:inputType="text" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/runBtn2"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:onClick="runHongbao2"
                        android:background="@drawable/btn_selector"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="开始" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/border">

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@drawable/border">

                <Button
                    android:id="@+id/fab"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_selector"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="+注册" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="程序状态：" />
                    <TextView
                        android:id="@+id/root_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未获取Root权限，"
                        android:textColor="@android:color/holo_red_dark" />
                    <TextView
                        android:id="@+id/sn_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未注册程序"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
